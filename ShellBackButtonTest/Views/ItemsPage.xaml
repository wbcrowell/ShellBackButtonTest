<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellBackButtonTest.Views.ItemsPage"
             Title="Items Page"
             xmlns:local="clr-namespace:ShellBackButtonTest.ViewModels"  
             xmlns:model="clr-namespace:ShellBackButtonTest.Models"  
             x:Name="BrowseItemsPage">

    <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
        <Label Text="Normal navigation behavior" FontSize="Title"/>
        <Label Text="Clicking the button below is step 2 in demonstrating normal navigation behavior." FontSize="16" Padding="0,0,0,0"/>
        <Button Margin="0,10,0,0" Text="Push Next Navigation Page"
                        Command="{Binding ShowItemPage}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
    </StackLayout>
</ContentPage>
